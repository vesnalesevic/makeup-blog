<div class="lg:h-full flex">
  <div class="mt-10 lg:mt-auto container m-auto">
      <div class="m-auto">
        <div class="w-full m-auto text-black sm:p-5 lg:py-3 xl:py-5">
          <div class="flex flex-col items-center bg-white sm:rounded-lg p-4">
            <div class="lg:flex flex-col">
              <div class="col-6 col-lg-2 mx-auto text-center">
                <%= image_tag "Logo.png", class: 'col-8 m-auto col-lg-12' %>
              </div>
        
              <div class="col-11 col-md-8 col-lg-6 m-auto">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group mt-2">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control rounded-0 border-1 border-dark', placeholder: 'Korisničko ime' %>
                  <span class="fa fa-envelope-o fa-lg field-icon"></span>
                </div>
          
                <div class="field-group mb-2">
                  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control rounded-0 border-1 border-dark', placeholder: '******' %>
                </div>
                <div class="d-flex justify-content-between">
                  <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Korisnička lozinka' %>
                  </div>
                <% end %>
                <div class="mb-2">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                  <% end %>
                </div>
              </div>
                
              <div class="actions">
                  <%= f.submit "Log in", width: '100%' %>
              </div>
                
                <% end %>
            </div>  
          </div> 
        </div>
      </div>
    </div>
  </div>
</div>




